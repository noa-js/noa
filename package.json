{
  "name": "noa",
  "version": "0.1.0",
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:8080 && cross-env NODE_ENV=development electron .",
    "electron:serve": "concurrently -k \"yarn dev\" \"yarn electron\"",
    "electron:build": "yarn build && electron-builder",
    "prepare": "husky install",
    "test": "jest",
    "lint": "eslint --fix"
  },
  "build": {
    "appId": "com.noa-js.noa",
    "productName": "Noa App",
    "copyright": "Copyright Â© 2021 Choi-Jungwoo",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,html}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@xstate/vue": "^1.0.0",
    "axios": "^0.21.1",
    "element-plus": "^2.0.5",
    "vee-validate": "3",
    "vue": "^3.2.6",
    "vue-condition-watcher": "^1.4.3",
    "vue-i18n": "9",
    "vue-router": "4",
    "vuex": "^4.0.2",
    "xstate": "^4.30.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@intlify/vite-plugin-vue-i18n": "^3.3.1",
    "@nabla/vite-plugin-eslint": "^1.4.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@vitejs/plugin-vue": "^1.6.0",
    "@vue/compiler-sfc": "^3.2.6",
    "@vue/test-utils": "^2.0.0-rc.12",
    "concurrently": "^7.0.0",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-define-config": "^1.2.3",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-vue": "^7.16.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "mockjs": "^1.1.0",
    "postcss-html": "^1.3.0",
    "prettier": "^2.3.2",
    "sass": "^1.38.1",
    "stylelint": "^14.5.3",
    "stylelint-config-html": "^1.0.0",
    "stylelint-scss": "^4.1.0",
    "ts-jest": "^27.0.5",
    "ts-vue-plugin": "^0.1.3",
    "typescript": "^4.3.2",
    "unplugin-vue-components": "^0.17.21",
    "vite": "^2.5.1",
    "vite-plugin-html": "^3.1.0",
    "vite-plugin-mock": "^2.9.6",
    "vite-plugin-pages": "^0.21.4",
    "vite-plugin-style-import": "^2.0.0",
    "vite-plugin-vue-layouts": "^0.6.0",
    "vite-plugin-webfont-dl": "^1.0.9",
    "vite-svg-loader": "^3.1.2",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-tsc": "^0.2.2",
    "wait-on": "^6.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
